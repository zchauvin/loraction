<div class='bubble center narrow'>

<h2>Sign up for Loraction </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class='narrow center'>
  <%= f.email_field :email, autofocus: true, class: 'invis', placeholder: 'Email' %></div>

	<div class='narrow center'>
  <%= f.text_field :first_name, class: 'invis', placeholder: 'First Name'  %></div>

	<div class='narrow center'>
  <%= f.text_field :last_name, class: 'invis', placeholder: 'Last Name'  %></div>
  <% if f.object.password_required? %>

     <div class='narrow center'>
    <%= f.password_field :password, autocomplete: "off", class: 'invis', placeholder: 'Password'  %></div>

    <div class='narrow center'>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'invis', placeholder: 'Confirm Password'  %></div>

  <% end %>
  <br>
  <div class='narrow'>
    <%= f.submit "Sign up", class: 'btn btn-warning' %>
  </div>
  
  <div class='full'>
    <span class='right'>Already have an account? Sign in 
      <%= link_to "here", new_session_path(resource_name), class: 'link' %>
    <span>
  </div>

  <div class='full'>
    <span class='right'>Want to sign up with Facebook? Sign up 
      <%- resource_class.omniauth_providers.each do |provider| %>
       <%= link_to "here", omniauth_authorize_path(resource_name, provider), class: 'link' %><br />
    <span>
  </div>
  
  <% end -%>
  <div>

<% end %>


<div>