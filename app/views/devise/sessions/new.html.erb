<div class="bubble center narrow">
	<h2>Sign into Loraction</h2>
	
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class='narrow center'>
	  <%= f.email_field :email, autofocus: true, class: 'invis', placeholder: 'Email' %></div>
	
	  <div class='narrow center'>
	    <%= f.password_field :password, autocomplete: "off", class: 'invis', placeholder: 'Password' %></div>
	
	  <div class='narrow'>
	    <%= f.submit "Sign in", class: 'btn btn-warning' %>
	  </div>
	
	<% end %>
	
	  <div class='full'>
	    <span class='right'>Don't have an account? Sign up 
	      <%= link_to "here", new_registration_path(resource_name), class: 'link' %>
	    <span>
	  </div>
	
	  <div class='full'>
	    <span class='right'>Want to sign in with Facebook? Sign in 
	      <%- resource_class.omniauth_providers.each do |provider| %>
	       <%= link_to "here", omniauth_authorize_path(resource_name, provider), class: 'link' %><br />
	      <%- end %>
	    <span>
	  </div>
</div>